<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <com.lanou.ourteam.mirrors.common.customhem.VerticalViewPager
        android:id="@+id/mainactivity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.lanou.ourteam.mirrors.common.customhem.VerticalViewPager>

    <ImageView
        android:id="@+id/mainactivity_mirror"
        android:layout_marginLeft="@dimen/mainactivitymirrorleft"
        android:layout_marginBottom="@dimen/mainactivitymirrorbottom"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/mirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mainactivity_login"
        android:textSize="@dimen/mainactivitylogintextsize"
        android:textColor="#ffffff"
        android:layout_marginBottom="@dimen/mainactivityloginbottom"
        android:layout_marginRight="@dimen/mainactivityloginright"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/mainactivity_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoRelativeLayout>