<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.lanou.ourteam.mirrors.selfview.VerticalPager
        android:id="@+id/main_vertical_viewpger"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_vertical_viewpger"
        >

        <ImageView
            android:layout_marginLeft="@dimen/margin_48px"
            android:layout_marginBottom="@dimen/margin_40px"
            android:src="@drawable/mirror_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="登陆"
            android:layout_marginEnd="@dimen/margin_48px"

            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>