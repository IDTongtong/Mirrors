<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="@string/ordee_detials"
        android:textColor="#000000"
        android:textSize="34px" />

    <ImageView
        android:id="@+id/order_detials_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30px"
        android:src="@mipmap/close" />

    <ImageView
        android:id="@+id/order_detials_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_detials_close"
        android:layout_marginTop="@dimen/create_marginleft"
        android:src="@mipmap/create_account_unline" />


    <EditText

        android:id="@+id/order_detials_write_detials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_detials_line"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="40px"
        android:background="@mipmap/address_input"

        android:text="请填写联系人信息"
        android:textColor="#000000" />

</com.zhy.autolayout.AutoRelativeLayout>