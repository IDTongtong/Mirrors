<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout

    android:layout_centerInParent="true"
    android:layout_width="@dimen/story_detail_width"
    android:layout_height="wrap_content"
    android:background="@drawable/show_06_border"
    >
    <LinearLayout
        android:id="@+id/textview_ll"
        android:layout_marginLeft="@dimen/margin_30px"
        android:layout_marginTop="@dimen/margin_30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_story_detail_smallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/story_detail_smalltitle_matgintop"
            android:text="@string/story_detail_smallTitle_text"
            android:textColor="@color/text_white"
            android:textSize="@dimen/story_detail_text_size_22px"

            />

        <TextView
            android:id="@+id/fragment_story_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/story_detail_title_matgintop"
            android:text="@string/story_detail_title_text"
            android:textColor="@color/text_white"
            android:textSize="@dimen/story_detail_text_size_34px" />

        <TextView
            android:id="@+id/fragment_story_detail_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/story_detail_subtitle_matgintop"
            android:text="@string/story_detail_subtitle"
            android:textColor="@color/text_white"
            android:textSize="@dimen/story_detail_text_size_20px" />

    </LinearLayout>
</RelativeLayout>

    <ImageView
        android:id="@+id/fragment_story_detail_shared_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/story_detail_share_margin_bottom"
        android:layout_marginRight="@dimen/story_detail_share_margin_right"
        android:layout_marginTop="@dimen/story_detail_share_margin_text_ll"
        android:src="@drawable/share_btn"

        />


</com.zhy.autolayout.AutoRelativeLayout>