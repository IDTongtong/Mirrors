<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/goods_list_item_margin_right"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/story_item_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/story_item_pic_height"
        android:src="@mipmap/loading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/goods_list_item_description_marginleft"
        android:orientation="vertical">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/story_item_doubleb_lackline_margintop"
            android:src="@drawable/double_line_black" />

        <TextView
            android:id="@+id/story_item_story_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/story_item_brand_margintop"
            android:text="mirror 穿搭 | 冷美人的慵懒随性风"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_30px" />
    </LinearLayout>
</LinearLayout>