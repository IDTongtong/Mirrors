<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/create_margin"
        android:layout_marginRight="@dimen/create_margin"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_margin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/create_marginleft"
                android:text="@string/login"
                android:textColor="@color/text_black"
                android:textSize="@dimen/create_createaccount_wordsize" />

            <ImageView
                android:id="@+id/login_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/create_marginleft"
                android:src="@mipmap/close" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/login_bar_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_marginleft"
            android:src="@mipmap/create_account_unline" />

        <TextView
            android:id="@+id/login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_phone_wordsize"
            android:text="@string/phonenum_input"
            android:textColor="@color/text_black"
            android:textSize="24px" />

        <EditText
            android:id="@+id/login_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:maxLines="1"
            android:layout_marginTop="20px"
            android:background="@mipmap/phonenum_input" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="密碼"
            android:textColor="@color/text_black"
            android:textSize="@dimen/create_verification_wordsize" />


        <EditText
            android:id="@+id/login_verification_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@mipmap/phonenum_input" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_forget_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20px"
                android:text="忘記密碼"
                android:textColor="@color/text_black"
                android:textSize="26px" />

        </RelativeLayout>

        <TextView
            android:id="@+id/login_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:background="@drawable/selector_create_account"
            android:gravity="center"
            android:text="登陸"
            android:textColor="#ffffff"
            android:textSize="30px" />


        <TextView
            android:id="@+id/login_btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_margin"
            android:background="@drawable/selector_create_account"
            android:gravity="center"
            android:text="@string/login_creataccount"
            android:textColor="@color/text_white"
            android:textSize="@dimen/create_creataccount_wordsize"
            android:textStyle="bold" />

    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
