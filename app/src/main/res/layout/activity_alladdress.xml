<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/create_margin"
        android:layout_marginRight="@dimen/create_margin"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_margin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/create_marginleft"
                android:text="@string/alladress_title"
                android:textColor="@color/text_black"
                android:textSize="@dimen/create_createaccount_wordsize" />

            <ImageView
                android:id="@+id/address_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/create_marginleft"
                android:src="@mipmap/close" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/address_bar_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_marginleft"
            android:src="@mipmap/create_account_unline" />




    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
