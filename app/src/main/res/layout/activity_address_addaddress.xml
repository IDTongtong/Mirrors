<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/create_margin"
        android:layout_marginRight="@dimen/create_margin"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_margin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/create_marginleft"
                android:text="添加地址"
                android:textColor="@color/text_black"
                android:textSize="@dimen/create_createaccount_wordsize" />

            <ImageView
                android:id="@+id/activity_addaddress_edit_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/create_marginleft"
                android:src="@mipmap/close" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/activity_addaddress_edit_bar_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_marginleft"
            android:src="@mipmap/create_account_unline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_phone_wordsize"
            android:text="添加收件人姓名"
            android:textColor="@color/text_black"
            android:textSize="24px" />

        <EditText
            android:id="@+id/activity_addaddress_edit_user_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@mipmap/phonenum_input"
            android:maxLines="1"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="添加联系电话号码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/create_verification_wordsize" />


        <EditText
            android:id="@+id/activity_addaddress_edit_phone_num_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@mipmap/phonenum_input"
            android:maxLines="1"
            android:numeric="decimal"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="添加收货地址"
            android:textColor="@color/text_black"
            android:textSize="@dimen/create_verification_wordsize" />

        <EditText
            android:id="@+id/activity_addaddress_edit_address_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15px"
            android:background="@mipmap/address_input" />


        <Button
            android:id="@+id/activity_addaddress_edit_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/create_margin"
            android:background="@drawable/selector_create_account"
            android:gravity="center"
            android:text="提交地址"
            android:textColor="@color/text_white"
            android:textSize="@dimen/create_creataccount_wordsize" />


    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
