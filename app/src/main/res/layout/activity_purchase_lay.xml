    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_purchase_goods_all_info_margin_top"
        android:background="@mipmap/address_input">

        <ImageView
            android:id="@+id/activity_purchase_goods_iv"
            android:layout_width="@dimen/activity_purchase_goods_iv_width"
            android:layout_height="@dimen/activity_purchase_goods_iv_height"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activity_purchase_goods_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_purchase_goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_purchase_goods_name_margin_top"
                android:text="woodlike"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_30px" />

            <TextView
                android:id="@+id/activity_purchase_info_des_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_purchase_goods_des_margin_top"
                android:maxLines="3"
                android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_30px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_purchase_goods_price_margin_bottom"
                android:layout_marginTop="@dimen/activity_purchase_goods_price_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/money" />

                <TextView
                    android:id="@+id/activity_purchase_goods_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="0.01"
                    android:textColor="@color/activity_purchase_price"
                    android:textSize="@dimen/activity_purchase_goods_price_textsize" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/activity_purdetails_btn"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="50px"
        android:background="@drawable/selector_create_account"
        android:gravity="center"
        android:text="确认下单"
        android:textColor="#ffffff" />
</com.zhy.autolayout.AutoLinearLayout>