<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:padding="30px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_order_detail"
            android:textColor="@color/text_black"
            android:textSize="34px" />

        <ImageView
            android:id="@+id/activity_purdetails_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16px"
            android:src="@mipmap/close" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:src="@mipmap/create_account_unline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_purchase_user_add_margin_top"
        android:background="@drawable/address_insert_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/address_receiver_margin_left">

        <TextView
            android:id="@+id/activity_purchase_address_reciever_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/address_receiver_margin_top"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_26px" />

        <TextView
            android:id="@+id/activity_purchase_address_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/address_add_margin_top"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/activity_purchase_address_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/address_phone_num_margin_bottom"
            android:layout_marginTop="@dimen/address_phone_num_margin_top"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/address_divider_height"
            android:background="@color/activity_purchase_address_divider_bg" />

        <TextView
            android:id="@+id/activity_purchase_address_changeoradd_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/address_change_insert_tv_height"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_26px"
            android:gravity="center"
            android:text="更改地址"
            />

    </LinearLayout>
